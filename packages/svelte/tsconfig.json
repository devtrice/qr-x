{
  "extends": ["@common/tsconfig/base.json", "./.svelte-kit/tsconfig.json"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  }
}
